<%= form_for([@activity, @activity.reviews.build]) do |f| %>
  <p>
    <%= f.label :reviewer_id %><br>
    <%= f.text_field :reviewer_id %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_area :rating %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
